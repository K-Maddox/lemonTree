<resources>

    <style name="Theme.LemonTreeFirebase" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="buttonStyle">@style/CustomButton</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="materialButtonStyle">@style/CustomButton</item>
        <item name="floatingActionButtonStyle">@style/CustomFABStyle</item>
    </style>

    <!--    Custom BUTTON Style-->
    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/btn_background</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <!--    Custom Floating Action Button Style-->
    <style name="CustomFABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/CustomFABShape</item>
    </style>

    <style name="CustomFABShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
    </style>

</resources>