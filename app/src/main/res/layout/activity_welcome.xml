<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="317dp"
        android:layout_height="292dp"
        app:srcCompat="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_wel_login"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="80dp" />

    <Button
        android:id="@+id/btn_wel_login"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:text="LOG IN"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_wel_signup" />

    <Button
        android:id="@+id/btn_wel_signup"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        app:layout_constraintTop_toBottomOf="@id/btn_wel_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp" />


</LinearLayout>